<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Productos">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <include
            android:id="@+id/mytoolbar"
            layout="@layout/mytoolbar" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.2dp"
            android:layout_marginBottom="0.2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProducto1"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/arbol_navidad" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProducto1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Arbol de navidad" />

                <TextView
                    android:id="@+id/txtPrecio1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$50.000" />

            </LinearLayout>

            <Button
                android:id="@+id/btnProducto1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Añadir" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.2dp"
            android:layout_marginBottom="0.2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProducto2"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/estrella" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProducto2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Adorno Estrella múltiple" />

                <TextView
                    android:id="@+id/txtPrecio2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$50.000" />

            </LinearLayout>

            <Button
                android:id="@+id/btnProducto2"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Añadir" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.2dp"
            android:layout_marginBottom="0.2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProducto3"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/campana" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProducto3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Campana para puerta" />

                <TextView
                    android:id="@+id/txtPrecio3"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$50.000" />

            </LinearLayout>

            <Button
                android:id="@+id/btnProducto3"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Añadir" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.2dp"
            android:layout_marginBottom="0.2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProducto4"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/corona" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProducto4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Corona navideña decorada" />

                <TextView
                    android:id="@+id/txtPrecio4"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$50.000" />

            </LinearLayout>

            <Button
                android:id="@+id/btnProducto4"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Añadir" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0.2dp"
            android:layout_marginBottom="0.2dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgProducto5"
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:src="@drawable/esfera_decorada" />

            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtProducto5"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Esfera decorada" />

                <TextView
                    android:id="@+id/txtPrecio5"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="$2.000" />

            </LinearLayout>

            <Button
                android:id="@+id/btnProducto5"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Añadir" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>